<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">
    <title><%=title %> - Blogapp</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
        <div class="container">
            <a href="/" class="navbar-brand">Blogapp</a>
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a href="/blogs" class="nav-link">Blog Listesi</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <!-- <% for( let index = 0; index < categories.length; index++ ) { %>
                        <a href="" class="list-group-item list-group-item-action"> <%= categories[index] %></a>
                    <% } %> -->

                    <% categories.forEach(function(category){ %>
                        <a href="" class="list-group-item list-group-item-action"> <%= category %></a>
                   <% }) %>

                </div>
            </div>
            <div class="col-md-9">
                <h1 class="h3 mb-3">
                    <%=title %>
                </h1>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="/static/images/1.jpeg" class="img-fluid" alt="">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Komple Uygulamalı Web Geliştirme
                                </h5>
                                <p class="card-text">Web Geliştirme</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="/static/images/2.jpeg" class="img-fluid" alt="">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Phyton Programlama
                                </h5>
                                <p class="card-text">Phyton Geliştirme</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="/static/images/3.jpeg" class="img-fluid" alt="">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Javascript Programlama
                                </h5>
                                <p class="card-text">JS Geliştirme</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>