<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/nav') %>
    <div class="container mt-3">
      <div class="row">
        <div class="col-md-3">
          <div class="list-group">
            <!-- <% for( let index = 0; index < categories.length; index++ ) { %>
                        <a href="" class="list-group-item list-group-item-action"> <%= categories[index] %></a>
                    <% } %> -->

            <% categories.forEach(function(category){ %>
            <a href="" class="list-group-item list-group-item-action">
              <%= category %></a
            >
            <% }) %>
          </div>
        </div>
        <div class="col-md-9">
          <h1 class="h3 mb-3"><%=title %></h1>

          <% blogs.forEach(blog => { %>
            <% if (blog.onay==true) { %>
             
                <div class="card mb-3">
                  <div class="row">
                    <div class="col-md-4">
                      <img
                        src="/static/images/<%= blog.resim %>"
                        class="img-fluid"
                        alt=""
                      />
                    </div>
                    <div class="col-md-8">
                      <div class="card-body">
                        <h5 class="card-title"><%= blog.baslik %></h5>
                        <p class="card-text"><%= blog.aciklama %></p>
                      </div>
                    </div>
                  </div>
                </div>
            <% } %>
          <% }) %>
          <% if (blogs.filter(b => b.onay).length > 2) { %>
                <%- include('../partials/pagination') %>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
